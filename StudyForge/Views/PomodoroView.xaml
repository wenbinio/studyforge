<UserControl x:Class="StudyForge.Views.PomodoroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Pomodoro Timer" FontSize="32" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Pomodoro Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- State Display -->
                <Border Grid.Row="0" Background="#3498DB" CornerRadius="10" Padding="15" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding PomodoroStateDisplay}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                </Border>
                
                <!-- Timer Display -->
                <Viewbox Grid.Row="1" MaxHeight="300" Margin="0,40,0,40">
                    <TextBlock Text="{Binding PomodoroTimeDisplay}" FontWeight="Bold" Foreground="#2C3E50"/>
                </Viewbox>
                
                <!-- Control Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                    <Button Content="▶ Start" Width="120" Height="50" Margin="10" 
                           Background="#2ECC71" Foreground="White" BorderThickness="0" 
                           FontSize="16" FontWeight="Bold" Cursor="Hand"
                           Command="{Binding StartPomodoroCommand}"/>
                    <Button Content="⏸ Pause" Width="120" Height="50" Margin="10" 
                           Background="#F39C12" Foreground="White" BorderThickness="0" 
                           FontSize="16" FontWeight="Bold" Cursor="Hand"
                           Command="{Binding PausePomodoroCommand}"/>
                    <Button Content="⏹ Reset" Width="120" Height="50" Margin="10" 
                           Background="#E74C3C" Foreground="White" BorderThickness="0" 
                           FontSize="16" FontWeight="Bold" Cursor="Hand"
                           Command="{Binding ResetPomodoroCommand}"/>
                </StackPanel>
                
                <!-- Settings -->
                <Border Grid.Row="3" Background="#F8F9FA" CornerRadius="10" Padding="20" Margin="0,20,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Configuration" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Work Duration:" Width="120" VerticalAlignment="Center"/>
                                <TextBox x:Name="WorkDuration" Width="60" Text="25" VerticalAlignment="Center"/>
                                <TextBlock Text=" min" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Short Break:" Width="120" VerticalAlignment="Center"/>
                                <TextBox x:Name="ShortBreak" Width="60" Text="5" VerticalAlignment="Center"/>
                                <TextBlock Text=" min" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Long Break:" Width="120" VerticalAlignment="Center"/>
                                <TextBox x:Name="LongBreak" Width="60" Text="15" VerticalAlignment="Center"/>
                                <TextBlock Text=" min" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <Button Content="Apply Settings" Margin="0,15,0,0" Padding="10" 
                                   Background="#3498DB" Foreground="White" BorderThickness="0"
                                   Click="ApplySettings_Click"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="About Pomodoro Technique" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            <TextBlock TextWrapping="Wrap" LineHeight="20">
                                The Pomodoro Technique helps you focus by breaking work into intervals:
                                <LineBreak/><LineBreak/>
                                1. Work for 25 minutes (1 Pomodoro)
                                <LineBreak/>
                                2. Take a 5-minute break
                                <LineBreak/>
                                3. After 4 Pomodoros, take a 15-minute break
                                <LineBreak/><LineBreak/>
                                This technique improves focus and prevents burnout!
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
