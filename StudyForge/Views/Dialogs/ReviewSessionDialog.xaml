<Window x:Class="StudyForge.Views.Dialogs.ReviewSessionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review Session" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Progress -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="ProgressText" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ProgressBar x:Name="ProgressBar" Height="10" />
        </StackPanel>
        
        <!-- Card Display -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="40" 
                BorderBrush="#3498DB" BorderThickness="2">
            <Grid>
                <StackPanel x:Name="QuestionPanel" VerticalAlignment="Center">
                    <TextBlock Text="Question:" FontSize="18" Foreground="Gray" Margin="0,0,0,20"/>
                    <TextBlock x:Name="QuestionText" FontSize="24" TextWrapping="Wrap" 
                              HorizontalAlignment="Center" TextAlignment="Center"/>
                    
                    <Button Content="Show Answer" Margin="0,40,0,0" Padding="30,15" 
                           Background="#3498DB" Foreground="White" BorderThickness="0" 
                           FontSize="16" FontWeight="Bold" Cursor="Hand"
                           Click="ShowAnswer_Click" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel x:Name="AnswerPanel" Visibility="Collapsed" VerticalAlignment="Center">
                    <TextBlock Text="Question:" FontSize="14" Foreground="Gray" Margin="0,0,0,10"/>
                    <TextBlock x:Name="QuestionText2" FontSize="18" TextWrapping="Wrap" 
                              Margin="0,0,0,30" TextAlignment="Center"/>
                    
                    <TextBlock Text="Answer:" FontSize="14" Foreground="Gray" Margin="0,0,0,10"/>
                    <TextBlock x:Name="AnswerText" FontSize="20" FontWeight="Bold" 
                              TextWrapping="Wrap" Foreground="#2ECC71" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Rating Buttons (Visible after showing answer) -->
        <StackPanel Grid.Row="2" x:Name="RatingPanel" Visibility="Collapsed" 
                    Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,20">
            <TextBlock Text="How well did you remember?" FontSize="16" 
                      VerticalAlignment="Center" Margin="0,0,20,0"/>
            
            <Button Content="0 - Forgot" Width="120" Height="40" Margin="5" 
                   Background="#E74C3C" Foreground="White" BorderThickness="0" 
                   Click="Rate_Click" Tag="0" Cursor="Hand"/>
            <Button Content="3 - Hard" Width="120" Height="40" Margin="5" 
                   Background="#F39C12" Foreground="White" BorderThickness="0" 
                   Click="Rate_Click" Tag="3" Cursor="Hand"/>
            <Button Content="4 - Good" Width="120" Height="40" Margin="5" 
                   Background="#3498DB" Foreground="White" BorderThickness="0" 
                   Click="Rate_Click" Tag="4" Cursor="Hand"/>
            <Button Content="5 - Easy" Width="120" Height="40" Margin="5" 
                   Background="#2ECC71" Foreground="White" BorderThickness="0" 
                   Click="Rate_Click" Tag="5" Cursor="Hand"/>
        </StackPanel>
        
        <!-- Close Button -->
        <Button Grid.Row="3" Content="End Session" Width="150" Height="40" 
               Background="#95A5A6" Foreground="White" BorderThickness="0" 
               FontSize="14" Cursor="Hand" Click="EndSession_Click" 
               HorizontalAlignment="Center"/>
    </Grid>
</Window>
