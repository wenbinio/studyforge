<Window x:Class="StudyForge.Views.Dialogs.FlashcardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flashcard Editor" Height="450" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Category -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Category" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="CategoryBox" Height="30" Padding="5" VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <!-- Question -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Question" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="QuestionBox" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" Padding="5"/>
        </StackPanel>
        
        <!-- Answer -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Answer" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="AnswerBox" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" Padding="5"/>
        </StackPanel>
        
        <!-- Notes -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Notes (Optional)" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="NotesBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" Padding="5"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="100" Height="35" Margin="0,0,10,0" 
                   Background="#95A5A6" Foreground="White" BorderThickness="0" 
                   Click="Cancel_Click" Cursor="Hand"/>
            <Button Content="Save" Width="100" Height="35" 
                   Background="#2ECC71" Foreground="White" BorderThickness="0" 
                   Click="Save_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
