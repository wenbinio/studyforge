<Window x:Class="StudyForge.Views.Dialogs.NoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note Editor" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Title" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleBox" Height="30" Padding="5" VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <!-- Category -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Category" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="CategoryBox" Height="30" Padding="5" VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <!-- Content -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Content" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="ContentBox" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" Padding="5"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="100" Height="35" Margin="0,0,10,0" 
                   Background="#95A5A6" Foreground="White" BorderThickness="0" 
                   Click="Cancel_Click" Cursor="Hand"/>
            <Button Content="Save" Width="100" Height="35" 
                   Background="#9B59B6" Foreground="White" BorderThickness="0" 
                   Click="Save_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
