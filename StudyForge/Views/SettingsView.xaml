<UserControl x:Class="StudyForge.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Settings" FontSize="32" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Claude API Configuration -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Claude AI Configuration" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="API Key" FontSize="14" Margin="0,10,0,5"/>
                    <PasswordBox x:Name="ApiKeyBox" Height="30" Padding="5"/>
                    
                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,10" Foreground="Gray" FontSize="12">
                        Enter your Claude API key to enable AI-powered features such as:
                        <LineBreak/>
                        • Automatic flashcard generation from notes
                        <LineBreak/>
                        • Finding answers in study materials
                        <LineBreak/>
                        • Note summarization
                        <LineBreak/><LineBreak/>
                        Get your API key from: https://console.anthropic.com/
                    </TextBlock>
                    
                    <Button Content="Save API Key" Padding="15,10" Margin="0,10,0,0" 
                           Background="#2ECC71" Foreground="White" BorderThickness="0" 
                           FontSize="14" Cursor="Hand" Click="SaveApiKey_Click" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
            
            <!-- Study Preferences -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Study Preferences" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <CheckBox Content="Show notifications for due cards" Margin="0,5" IsChecked="True"/>
                    <CheckBox Content="Auto-advance to next card after review" Margin="0,5"/>
                    <CheckBox Content="Enable sound notifications" Margin="0,5"/>
                    
                    <TextBlock Text="Default Category" FontSize="14" Margin="0,20,0,5"/>
                    <TextBox x:Name="DefaultCategory" Text="General" Height="30" Padding="5"/>
                    
                    <Button Content="Save Preferences" Padding="15,10" Margin="0,20,0,0" 
                           Background="#3498DB" Foreground="White" BorderThickness="0" 
                           FontSize="14" Cursor="Hand" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
            
            <!-- Data Management -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Data Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Database Location" FontSize="14" Margin="0,10,0,5"/>
                    <TextBox x:Name="DatabasePath" IsReadOnly="True" Background="#F8F9FA" 
                            Height="30" Padding="5" VerticalContentAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Export Data" Padding="15,10" Margin="0,0,10,0" 
                               Background="#F39C12" Foreground="White" BorderThickness="0" 
                               FontSize="14" Cursor="Hand"/>
                        <Button Content="Import Data" Padding="15,10" Margin="0,0,10,0" 
                               Background="#3498DB" Foreground="White" BorderThickness="0" 
                               FontSize="14" Cursor="Hand"/>
                        <Button Content="Reset Statistics" Padding="15,10" 
                               Background="#E74C3C" Foreground="White" BorderThickness="0" 
                               FontSize="14" Cursor="Hand" Click="ResetStats_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- About -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="About StudyForge" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBlock TextWrapping="Wrap" LineHeight="24">
                        <Run FontWeight="Bold">StudyForge</Run> - Your all-in-one study companion
                        <LineBreak/><LineBreak/>
                        Version: 1.0.0
                        <LineBreak/><LineBreak/>
                        Features:
                        <LineBreak/>
                        • Pomodoro Timer for focused study sessions
                        <LineBreak/>
                        • Active Recall with flashcards
                        <LineBreak/>
                        • Spaced Repetition (SM-2 algorithm)
                        <LineBreak/>
                        • AI-powered content generation with Claude
                        <LineBreak/>
                        • Comprehensive note management
                        <LineBreak/>
                        • Progress tracking and statistics
                        <LineBreak/><LineBreak/>
                        Built with ❤️ for effective learning
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
